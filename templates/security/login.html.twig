{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData,'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method = "post">
        Username: <input type="text" id="username" name="_username" value="{{ last_username }}"/>
        Password: <input type="password" id="password" name="_password" />
        {#<input type="hidden" name="_token" value="{{ csrf_token('auth') }}" />#}
        <button type="submit">Войти</button>
    </form>

{% endblock %}