{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .all{
            position:fixed;
            padding:0;
            margin:0;

            top:0;
            left:0;

            width: 100%;
            height: 100%;
            background: rgba(30, 255, 2, 0.5);
        }
    .center_style{
        background-color: #b0e67d;
    }
    .qqq{
        padding: 10px;
    }
    </style>

<div class="all">

    <div class="container center_style" style="padding-top: 50px">
        <div class="row">
            <div class="col-3"><a href="/add_topic">Add topic</a></div>
            <div class="col-3"><a href="/login">Log In</a></div>
            <div class="col-3"><a href="/userlist">Users</a></div>
            <div class="col-3"><a href="/register">Register</a></div>

        </div>
        {% for  section in sections_list %}
            <div class = "row qqq" style="background-color: #9cdbf9">
                <div class="col-6">
                    <a href="/section/{{ section.id }}">{{ section.name }}</a>
                </div>
                <div class="col-6">
                    {{ section.id }}
                </div>
            </div>
        {% endfor %}


    </div>

</div>

{% endblock %}
